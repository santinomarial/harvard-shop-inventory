# Harvard Shop Inventory Management System - Environment Configuration
# Copy this file and customize for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate a secure key: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=harvard-shop-ultra-secure-secret-key-change-in-production-2024

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database file path
DATABASE_URL=./inventory.db

# For PostgreSQL in production (uncomment and configure):
# DATABASE_URL=postgresql://username:password@localhost:5432/harvard_shop_inventory

# =============================================================================
# EMAIL CONFIGURATION (Optional - for alerts and notifications)
# =============================================================================
# SMTP settings for sending email alerts
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Email settings
EMAIL_FROM="Harvard Shop Inventory <noreply@harvard.edu>"
EMAIL_ADMIN=admin@harvard.edu

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log directory
LOG_DIR=./logs

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# API rate limit (requests per window)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Session secret for additional security
SESSION_SECRET=harvard-shop-session-secret-2024

# JWT token expiration
JWT_EXPIRES_IN=24h

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=./uploads

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics tracking ID (optional)
GA_TRACKING_ID=

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================
# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=

# SMS service configuration (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_API_DOCS=true

# Enable development tools
ENABLE_DEV_TOOLS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production database connection pooling
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis configuration for caching (production)
REDIS_URL=redis://localhost:6379

# CDN configuration for static assets
CDN_URL=

# SSL configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Health check endpoint enabled
HEALTH_CHECK_ENABLED=true

# Metrics collection
METRICS_ENABLED=true

# Error tracking service (e.g., Sentry)
SENTRY_DSN=

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Harvard Shop specific settings
SHOP_NAME="Harvard Shop"
SHOP_ADDRESS="Harvard University, Cambridge, MA"
SHOP_PHONE="+1-617-495-1000"
SHOP_EMAIL="shop@harvard.edu"

# Default currency
CURRENCY=USD

# Tax rate (as decimal, e.g., 0.0625 for 6.25%)
TAX_RATE=0.0625

# Business hours
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable specific features
ENABLE_BARCODE_SCANNING=false
ENABLE_MULTI_LOCATION=false
ENABLE_SUPPLIER_PORTAL=false
ENABLE_LOYALTY_PROGRAM=false
ENABLE_ONLINE_ORDERING=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# POS System integration
POS_INTEGRATION_ENABLED=false
POS_API_URL=
POS_API_KEY=

# Accounting system integration
ACCOUNTING_INTEGRATION_ENABLED=false
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
# Push notification settings
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=

# Mobile API version
MOBILE_API_VERSION=v1

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Automatic backup to cloud storage
CLOUD_BACKUP_ENABLED=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Machine learning features
ML_ENABLED=false
ML_API_URL=

# Advanced analytics
ADVANCED_ANALYTICS_ENABLED=false