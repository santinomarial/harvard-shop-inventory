{
    "name": "harvard-shop-inventory",
    "version": "1.0.0",
    "description": "Full-stack inventory management system for Harvard Shop with real-time analytics and automated alerts",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "client": "cd client && npm start",
        "client:build": "cd client && npm run build",
        "client:install": "cd client && npm install",
        "heroku-postbuild": "npm run client:install && npm run client:build",
        "test": "jest",
        "seed": "node scripts/seedDatabase.js",
        "setup": "npm install && npm run client:install && npm run seed",
        "deploy:heroku": "git push heroku main",
        "logs": "heroku logs --tail"
    },
    "keywords": [
        "inventory-management",
        "harvard-shop",
        "express",
        "react",
        "sqlite",
        "full-stack",
        "retail-tech",
        "analytics",
        "automation"
    ],
    "author": "Your Name <your.email@harvard.edu>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/harvard-shop-inventory.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/harvard-shop-inventory/issues"
    },
    "homepage": "https://github.com/yourusername/harvard-shop-inventory#readme",
    "dependencies": {
        "bcrypt": "^5.1.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "csv-parser": "^3.2.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^6.2.0",
        "jsonwebtoken": "^9.0.0",
        "morgan": "^1.10.1",
        "multer": "^1.4.4",
        "node-cron": "^3.0.2",
        "nodemailer": "^6.10.1",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "eslint": "^8.36.0",
        "jest": "^29.4.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.4",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
